{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:android": {
      "env": ["JAVA_HOME", "ANDROID_NDK", "ANDROID_SDK", "ANDROID_HOME"],
      "outputs": [
        "apps/*/android",
        "!apps/*/android/.gradle",
        "!apps/*/android/build",
        "!apps/*/android/app/build"
      ],
      "inputs": [
        "**/package.json",
        "packages/webgpu/android",
        "!packages/webgpu/android/build",
        "packages/webgpu/src/*.ts",
        "packages/webgpu/src/*.tsx",
        "packages/webgpu/cpp/**",
        "apps/*/android/**",
        "apps/*/android/app/build.gradle",
        "apps/*/android/build.gradle",
        "apps/*/android/gradle.properties",
        "apps/*/android/local.properties",
        "!apps/*/android/.gradle",
        "!apps/*/android/build",
        "!apps/*/android/app/build"
      ]
    },
    "build:ios": {
      "dependsOn": ["pod:install"],
      "outputs": [
        "apps/*/ios/build",
        "apps/*/ios/Pods"
      ],
      "inputs": [
        "**/package.json",
        "**/*.podspec",
        "packages/webgpu/src/**/*.ts",
        "packages/webgpu/src/**/*.tsx",
        "packages/webgpu/cpp/**",
        "packages/webgpu/ios/**",
        "apps/*/package.json",
        "apps/*/ios",
        "!apps/*/ios/build",
        "!apps/*/ios/Pods"
      ]
    },
    "pod:install": {
      "cache": false,
      "inputs": ["**/ios/Podfile", "**/ios/Podfile.lock"],
      "outputs": ["**/ios/Pods/**"]
    },
    "lint": {},
    "tsc": {}
  }
}
